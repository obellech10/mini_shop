
<% if @merchant.nil?  %>
  <h1>All Items</h1>
  <% @items.each do |item| %>
    <p><%= item.name %></p>
  <% end %>
<% else  %>
  <h1>Items for <%= link_to @merchant.name, "/merchants/#{@merchant.id}" %></h1>
  <% @items.each do |item| %>
    <h2><%= item.name %></h2>
    <p><%= item.price %></p>
    <p><%= item.image %></p>
    <p><%= item.status %></p>
    <p><%= item.inventory %></p>
  <% end %>
  <p><%= link_to 'New Item', "/merchants/#{@merchant.id}/items/new" %></p>
<% end %>
