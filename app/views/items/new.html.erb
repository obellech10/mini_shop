<nav class="navbar navbar-expand-sm bg-dark">
  <ul class="navbar-nav">
    <li class="nav-link"><%= link_to 'Item Index', '/items' %></li>
    <li class="nav-link"><%= link_to 'Merchant Index', '/merchants' %></li>
  </ul>
</nav>

<form class="form-group">
  <div class="form-control bg-light">
    <%= form_tag "/merchants/#{@merchant.id}/items" do %>
      <%= label_tag :name %>
      <%= text_field_tag :name %><br>

      <%= label_tag :price %>
      <%= text_field_tag :price %><br>

      <%= label_tag :description %>
      <%= text_field_tag :description %><br>

      <%= label_tag :image %>
      <%= text_field_tag :image %><br>

      <%= label_tag :inventory %>
      <%= text_field_tag :inventory %><br>

      <%= label_tag :status %>
      <%= text_field_tag :status, "active" %><br>

      <button class="btn"><%= submit_tag 'Create Item' %></button>
    <% end %>
  </div>
</form>
