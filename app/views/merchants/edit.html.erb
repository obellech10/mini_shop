<nav class="navbar navbar-expand-sm bg-dark">
  <ul class="navbar-nav">
    <li class="nav-link"><%= link_to 'Item Index', '/items' %></li>
    <li class="nav-link"><%= link_to 'Merchant Index', '/merchants' %></li>
  </ul>
</nav>

<form class="form-group">
  <div class="form-control bg-light">
    <%= form_tag "/merchants/#{@merchant.id}", method: :patch do %>
      <%= label_tag :name %>
      <%= text_field_tag :name, @merchant.name %><br>

      <%= label_tag :address %>
      <%= text_field_tag :address, @merchant.address %><br>

      <%= label_tag :city %>
      <%= text_field_tag :city, @merchant.city %><br>

      <%= label_tag :state %>
      <%= text_field_tag :state, @merchant.state %><br>

      <%= label_tag :zip %>
      <%= text_field_tag :zip, @merchant.zip %><br>

    <button class="btn"><%= submit_tag 'Update Merchant' %></button>
    <% end %>
  </div>
</form>
